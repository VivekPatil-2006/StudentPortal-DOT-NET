@model StudentPortal.Models.Student

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add Student</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- ================= STUDENT DETAILS ================= -->
                <h5 class="text-primary mb-3">Student Information</h5>

                <div class="row">
                    <!-- Profile Photo -->
                    <div class="col-md-4 text-center mb-3">
                        <label class="fw-bold">Profile Photo</label>
                        <input type="file" asp-for="Photo"
                               class="form-control mt-2"
                               accept="image/*" />
                        <small class="text-muted">JPG / PNG allowed</small>
                    </div>

                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Mobile</label>
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="fw-bold">Course</label>
                                <input asp-for="Course" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- ================= PARENT DETAILS ================= -->
                <h5 class="text-primary mb-3">Parent Details</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Father Name</label>
                        <input name="FatherName" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Father Mobile</label>
                        <input name="FatherMobile" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Mother Name</label>
                        <input name="MotherName" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Mother Mobile</label>
                        <input name="MotherMobile" class="form-control" />
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="fw-bold">Address</label>
                        <textarea name="Address" rows="3" class="form-control"></textarea>
                    </div>
                </div>

                <!-- ================= ACTION BUTTONS ================= -->
                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        Save Student
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
